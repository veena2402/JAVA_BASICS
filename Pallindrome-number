import java.util.*;
public class Java
{
    public static void main(String[]args)
    {
        int num;
        int count=0;
        int rem;
        int rev=0;
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter the number:");
        num=sc.nextInt();
        int temp;
        temp=num;
        while(num>0)
        {
            rem=num%10;
            rev=rev*10+rem;
            num=num/10;
         }
     System.out.println("The count of digits is:"+rev);
     if(temp==rev)
     System.out.println("Pallindrome Number");
     else
     System.out.println(" not Pallindrome Number");
     
    }
}
